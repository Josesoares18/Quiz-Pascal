                                                                  Read (x);
                                                                  Case (x) of
                                                                    1: Matematica;
                                                                    2: Fisica;
                                                                    3: Quimica;
                                                                    4: Portugues;
                                                                    5: Historia;
                                                                    6: Creditos;
                                                                    7: Exit;
                                                                  End;
                                                                  
                                                                  textcolor( white );
                                                                  
                                                                  

                                                                  read (Resposta);
                                                                  write('Digite sua idade: ');
                                                                  read (Resposta);
                                                                  write('Digite a data: ');
                                                                  read (Resposta);
                                                                  writeln('  ');
                                                                  writeln('Digite os numeros 1,2,3 ou 4 para obter a resposta! ');
                                                                  writeln('  ');
                                                                  Writeln('Selecione umas das materias! Digite [1],[2],[3],[4],[5] ou [6]. ');
                                                                  Writeln('  ');
                                                                  Writeln ('1 - Matematica. ');
                                                                  Writeln ('2 - Fisica. ');
                                                                  Writeln ('3 - Quimica. ');
                                                                  Writeln ('4 - Portugues. ');
                                                                  Writeln ('5 - Historia. ');
                                                                  Writeln ('6 - Credito. ');
                                                                  Writeln ('7 - Sair. ');
                                                                  Writeln('  ');

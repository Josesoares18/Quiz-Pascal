                                                                  writeln ('  ');
                                                                  writeln ('Digite [1] para sair. ');
                                                                  writeln ('  ');
                                                                  Write ('Digite o numero: ');
                                                                  Read (x);
                                                                  If (x) = 1 then
                                                                  Begin
                                                                    Exit;
                                                                  End;
                                                                End;
                                                                
                                                                

                              Procedure Quimica;        // Quimica
                              Label Inicio;
                              
                              
                              Begin
                                Textcolor ( green );
                                Repeat
                                  Inicio:
                                  clrscr;
                                  Writeln('1) Qual cientista propôs o primeiro modelo atômico moderno que ficou conhecido como “bola de bilhar”? ');  {Questão 1}
                                  writeln(' ');
                                  Writeln('(A) Isaac Newton. ');
                                  Writeln('(B) Demócrito. ');
                                  Writeln('(C) John Dalton. ');
                                  Writeln('(D) Ernest Rutherford. ');
                                  Writeln ('  ');
                                  writeln('1. A');
                                  writeln('2. B');
                                  writeln('3. C');
                                  writeln('4. D');
                                  writeln('  ');
                                  Write('Digite a sua resposta: ');
                                  Readln (X);
                                  Writeln('  ');
                                  Case X Of
                                    1 : Writeln ('Errado');
                                    2 : Writeln ('Errado');
                                    3 : Writeln ('Correto');
                                    4 : Writeln ('Errado');
                                  End;
                                  
                                  Writeln('  ');
                                  Write('Deseja continuar? ');
                                  readln(s);
                                  
                                Until ((s='S') or (s='s'));
                                
                                Repeat                                        //inicio do repeat ou loop
                                  clrscr;
                                  Writeln('2) Assinale a alternativa incorreta: '); {Questão 2}
                                  writeln(' ');
                                  Writeln('(A) As primeiras ideias relativas à estrutura interna dos átomos foram de Thomson. ');
                                  Writeln('(B) No modelo atômico de Rutherford-Bohr, os elétrons que giram ao redor do núcleo não giram ao acaso, mas descrevem órbitas determinadas. ');
                                  Writeln('(C) O modelo atômico de Dalton considerava a existência de cargas nos átomos. ');
                                  Writeln('(D) Demócrito e Leucipo foram os primeiros a definir o conceito de matéria e átomo. ');
                                  Writeln ('  ');
                                  writeln('1. A');
                                  writeln('2. B');
                                  writeln('3. C');
                                  writeln('4. D');
                                  writeln('  ');
                                  Write('Digite a sua resposta: ');
                                  Readln (X);
                                  Writeln('  ');
                                  Case X Of
                                    1 : Writeln ('Errado');
                                    2 : Writeln ('Errado');
                                    3 : Writeln ('Correto');
                                    4 : Writeln ('Errado');
                                  End;
                                  
                                  Writeln('  ');
                                  Write('Deseja continuar? ');
                                  read(s);
                                Until ((s='S') or (s='s'));   //fim do repeat
                                  
                                  Writeln ('  ');
                                  
                                  Repeat
                                    clrscr;
                                    Writeln('3) Sobre o modelo Rutherford, considere as afirmações abaixo como verdadeiras ou falsas: '); {Questão 3}
                                    writeln(' ');
                                    Writeln('(A) O Modelo Atômico de Rutherford sugere que o átomo apresenta o aspecto de um sistema planetário. ');
                                    Writeln('(B) O Modelo Atômico de Rutherford ficou conhecido como “modelo pudim de ameixa” ou “pudim com passas” em decorrência do seu aspecto. ');
                                    Writeln('(C) No Modelo Atômico de Rutherford, os elétrons giram em torno do núcleo (formado por prótons e nêutrons), de forma semelhante aos planetas que giram à volta do Sol.');

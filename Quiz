                                                            Exit;
                                                          End;
                                                          
                                                          
                                                        Until ((s='S') or (s='s')); // fim do repeat
                                                        End;
                                                        
                                                        Procedure Historia;        // Historia
                                                        Label Inicio;
                                                        
                                                        
                                                        Begin
                                                          textcolor ( yellow );
                                                          Repeat
                                                            Inicio:
                                                            clrscr;
                                                            Writeln('1) Em meados do século XVIII, James Watt patenteou na Inglaterra seu invento, sobre o qual escreveu a seu pai: ');  {Questão 1}
                                                          Writeln('“O negócio a que me dedico agora se tornou um grande sucesso. A máquina de fogo que eu inventei está funcionando e obtendo uma resposta muito melhor do que qualquer outra que tenha sido inventada até agora”.');
                                                          writeln('  ');
                                                          writeln('A revolução histórica relacionada ao texto, a fonte primária de energia utilizada em tal máquina e a consequência ambiental de seu uso são, respectivamente: ');
                                                          Writeln('  ');
                                                          Writeln('(A) Puritana, gás natural e aumento na ocorrência de inversão térmica. ');
                                                          Writeln('(B) Gloriosa, petróleo e destruição da camada de ozônio. ');
                                                          Writeln('(C) Industrial, gás natural e redução da umidade atmosférica. ');
                                                          Writeln('(D) Industrial, carvão mineral e aumento da poluição atmosférica. ');
                                                          Writeln ('  ');
                                                          writeln('1. A');
                                                          writeln('2. B');
                                                          writeln('3. C');
                                                          writeln('4. D');
                                                          writeln('  ');
                                                          Write('Digite a sua resposta: ');
                                                          Readln (X);
                                                          Writeln('  ');
                                                          Case X Of
                                                            1 : Writeln ('Errado');
                                                            2 : Writeln ('Errado');
                                                            3 : Writeln ('Errado');
                                                            4 : Writeln ('Correto');
                                                          End;
                                                          
                                                          Writeln('  ');
                                                          Write('Deseja continuar? ');
                                                          readln(s);
                                                          
                                                        Until ((s='S') or (s='s'));
                                                        
                                                        Repeat                                        //inicio do repeat ou loop
                                                          clrscr;
                                                          Writeln('2) O acúmulo de capitais, a modernização da agricultura, a disponibilidade de mão de obra e de recursos naturais e a força do puritanismo ajudam a explicar o pioneirismo da __________ na Revolução Industrial. '); {Questão 2}
                                                          writeln(' ');
                                                          Writeln('Das opções abaixo listadas, o país que melhor preenche o espaço acima é: ');
                                                          Writeln(' ');
                                                          Writeln('(A) Alemanha. ');
